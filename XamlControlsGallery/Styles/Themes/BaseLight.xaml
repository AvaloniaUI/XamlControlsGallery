<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ae="https://github.com/avaloniaui/avaloniaedit">
  <Styles.Resources>
    <Color x:Key="XamlCodeComment">Gray</Color>
    <Color x:Key="XamlCodeCData">Gray</Color>
    <Color x:Key="XamlCodeDocType">Black</Color>
    <Color x:Key="XamlCodeXmlDeclaration">Black</Color>
    <Color x:Key="XamlCodeXmlTag">Black</Color>
    <Color x:Key="XamlCodeAttributeName">DarkViolet</Color>
    <Color x:Key="XamlCodeAttributeValue">DarkGreen</Color>
    <Color x:Key="XamlCodeEntity">Black</Color>
    <Color x:Key="XamlCodeBrokenEntity">Black</Color>
  </Styles.Resources>

  <Style Selector="ae|TextEditor">
    <Setter Property="Background" Value="White" />
    <Setter Property="Foreground" Value="Black" />
  </Style>

  <FluentTheme Mode="Light" />
</Styles>
