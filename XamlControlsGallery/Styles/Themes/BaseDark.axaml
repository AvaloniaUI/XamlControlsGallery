<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ae="https://github.com/avaloniaui/avaloniaedit">
  <Styles.Resources>
    <Color x:Key="XamlCodeComment">LightGray</Color>
    <Color x:Key="XamlCodeCData">LightGray</Color>
    <Color x:Key="XamlCodeDocType">White</Color>
    <Color x:Key="XamlCodeXmlDeclaration">White</Color>
    <Color x:Key="XamlCodeXmlTag">White</Color>
    <!-- <Color x:Key="XamlCodeTagName">Gold</Color> -->
    <Color x:Key="XamlCodeAttributeName">HotPink</Color>
    <Color x:Key="XamlCodeAttributeValue">Cyan</Color>
    <Color x:Key="XamlCodeEntity">White</Color>
    <Color x:Key="XamlCodeBrokenEntity">White</Color>
  </Styles.Resources>

  <Style Selector="ae|TextEditor">
    <Setter Property="Background" Value="Black" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <FluentTheme Mode="Dark" />
</Styles>
