<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:XamlControlsGallery.ViewModels;assembly=XamlControlsGallery"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1350" d:DesignHeight="700"
             xmlns:pages="clr-namespace:XamlControlsGallery.Pages;assembly=XamlControlsGallery"
             x:Class="XamlControlsGallery.Views.MainView"
             FontSize="14"
             Background="{x:Null}"
             Foreground="{DynamicResource SystemBaseHighColor}">

  <Panel>
    
    <ExperimentalAcrylicBorder IsHitTestVisible="False">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial TintColor="{DynamicResource ThemeBackgroundColor}" MaterialOpacity="0.70"
                                     TintOpacity="0.75" />
      </ExperimentalAcrylicBorder.Material>
